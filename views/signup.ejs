<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <title>Sign Up</title>
    <style>
      body{
        background-image: linear-gradient(to top, #b929ca, #b257ad, #8d28a2, #c455ea, #4f4f95);
        height: 100vh;
      }
      .parent-container{
        background-image: linear-gradient(to top, #b929ca, #b257ad, #8d28a2, #c455ea, #4f4f95);
        width: max-content;
        box-shadow: 8px 4px 4px 2px palegoldenrod ;
        border-radius: 25px;
        
      }
      .parent-container:hover{
        box-shadow: inset 1px 4px 1px 1px palegoldenrod ;
      }
      .container{
        position: absolute;
        background-color: pink;
        
      }
      h1{
        color: wheat;
      }
      h5{
        color: wheat;
      }
      .clr{
        color: wheat;
      }
    </style>
  </head>
  <body>
    <div class="w-50 border border-dark mx-auto mt-5 parent-container" style="border-radius: 45px;" >
      <div class="mx-auto mt-3 mb-4" style="width: 200px">
       <i> <h1>SIGN UP</h1></i>
      </div>

      <form class="w-50 mx-auto" action="/create" method="POST">
        <!-- Here Partial is done for Employee -->
        <%- include('_create_employee') %>

        <div class="mb-4 mt-3" style="display: flex; justify-content: center">
          <button type="submit" class="btn btn-primary">SIGN UP</button>
        </div>

        <div class="mx-auto mb-3 mt-3" style="width: 300px">
          <h5 style="display: inline clr">Account Exists Already&nbsp;</h5>
          <a href="/" class="clr">SIGN IN</a>
        </div>
      </form>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
