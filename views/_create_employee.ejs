<!-- Here User name can be written -->
<div class="mb-3">
  <label for="input-username" class="form-label clr">User Name</label>
  <input type="text" class="form-control" id="input-username" name="username" placeholder="Enter User Name"/>
</div>
<!-- Here Email ID can be written -->
<div class="mb-3">
  <label for="input-email" class="form-label clr">Email ID</label>
  <input type="email" class="form-control" id="input-email" placeholder="Email@gmail.com" name="email" />
</div>

<!-- Here Password can be written -->
<div class="mb-3">
  <label for="input-password" class="form-label clr">Password</label>
  <input type="password" class="form-control" id="input-password" name="password" placeholder="Enter P@$$word"/>
</div>
<!-- Here Confirm Password can be written -->
<div class="mb-3">
  <label for="input-confirm-password" class="form-label clr">Confirm Password</label>
  <input type="password" class="form-control" id="input-confirm-password" name="confirm_password" placeholder="Enter Confirm P@$$word"/>
</div>
